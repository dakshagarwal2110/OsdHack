<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_content_type_container"
    android:layout_width="match_parent"
    app:layout_constraintCircleRadius="13dp"
    android:background="#ECF2F6"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">


        <ImageView
            android:id="@+id/drawer_add_content"
            android:layout_width="94dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5sp"
            android:visibility="gone"
            android:src="@drawable/ic_user_black" />


        <TextView
            android:id="@+id/add_post_bottom_view_fab_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@id/drawer_add_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:text="Add post"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/upload_photo_layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_post_bottom_view_fab_button"
            android:layout_marginBottom="39dp"
            android:layout_marginStart="19dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="12dp"
                android:backgroundTint="@color/white"
                app:tint = "@color/black"
                android:src="@drawable/ic_post" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Upload photo"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/upload_video_layout_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/upload_photo_layout_bottom"
            android:layout_marginStart="19dp"
            android:visibility="gone"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Upload video"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>




    </RelativeLayout>
</androidx.core.widget.NestedScrollView>